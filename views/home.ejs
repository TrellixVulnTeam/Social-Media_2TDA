<h1>
    Codeial / <%= title %>
</h1>

<section id="feed-post">
    <h4>Posts</h4>
    <% if(locals.user) { %>
    <form action="/posts/create" id="new-post-form" method="post">
        <textarea id="content" name="post" cols="30" rows="3" placeholder="Type the post here"></textarea><br>
        <input type="submit" value="Post">
    </form>
    <% } %>
</section>


<section>
    <h1>The list of posts</h1> 
    <ul style="list-style: none">
        <% for(i of post){ %>
        <li>
                <small>
                    <a href="/posts/destroy/<%=i.id%>">del</a>
                </small>
                <%= i.content %>
                <br>
                <%= i.user.name %>
                 
                <br>
                <div class="post-comments">
                    <% if(locals.user) { %>
                        <form action="comments/create" method="post">
                            <input type="text" name="content" placeholder="Type comment here" required>
                            <input type="hidden" name="post" value="<%= i._id %>">
                            <input type="submit" value="add comment" >   
                        </form>
                    <% } %>
                    </div>
                     
            </li>
            
            <ul id="comment-list" style="list-style: none">
                <% for (comment of i.comments) { %> 
                     <small>
                        <a href="/comments/destroy/<%=comment.id%>">del</a>
                    </small>
                    <li class="comment-content" > <p> <%= comment.content %> </p> </li>        
                    <% } %>
            </ul>
                
                    
        <% } %>
    </ul>
</section>
            