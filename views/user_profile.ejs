<link rel="stylesheet" href="/css/user_profile.css">     

<img src="<%=user.avatar%>" alt="<%=user.name%>" width="100">
 
<% if(user.id == profile_user.id){ %>
    <form action="/users/update/<%= profile_user.id %>" method="POST" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Your Name" value="<%=profile_user.name%>" >
        <input type="email" name="email" placeholder="Your Email" value="<%=profile_user.email%>" > 
        <input type="file" name="avatar" placeholder="Profile Picture">
        <input type="submit" value="Update" >
    </form>
    <% }else{ %>
        <h1>
            <p>
                <%= profile_user.name %>
            </p>
        </h1>
        <h1>
            <p>
                <%= profile_user.email %>
            </p>
        </h1>
        <% if(locals.user){ %>
            <form action="/users/addfriend" method="POST">
                <input type="hidden" name="friendId" value="<%= profile_user.id %>">
                <input type="submit" value="Add/Remove Friend"> 
            </form>
        <% } %>

    <% } %>
            <a href="/">Home</a>

